<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
  </head>
  <body>
    <table border="1 solid ">
      <head>
        <tr>
          <th>Id</th>
          <th>Nome</th>
          <th>E-mail</th>
        </tr>
      </head>
      <tbody>
        <% imprime_db.forEach(function(pessoa){%>
        <tr>
          <td><%= pessoa.id %></td>
          <td><%= pessoa.nome%></td>
          <td><%= pessoa.email%></td>
        </tr>
        <% })%>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3">
            <p>
              Total de Registros:
              <span style="text-align: right">
                <%= (imprime_db.length>0) ? imprime_db.length : 0 %>
              </span>
              <button><a href="/cadastro">Novo</a></button>
            </p>
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>
